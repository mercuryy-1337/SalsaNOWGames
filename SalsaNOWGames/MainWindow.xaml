<Window x:Class="SalsaNOWGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SalsaNOWGames.ViewModels"
        xmlns:converters="clr-namespace:SalsaNOWGames.Converters"
        Title="SalsaNOW Games" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SecondaryBrush}">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolConverter x:Key="InverseBool"/>
        
        <!-- Game Card Style -->
        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Login View -->
        <Grid Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="1" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="12" 
                    Padding="50,40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="400">
                <StackPanel>
                    <!-- Logo/Title -->
                    <TextBlock Text="ðŸŽ® SalsaNOW Games" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource AccentBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Steam Game Downloader" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <!-- Steam Login Info -->
                    <TextBlock Text="Sign in with your Steam account to download games." 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,25"/>
                    
                    <!-- Error Message -->
                    <TextBlock Text="{Binding LoginError}" 
                               Foreground="{StaticResource DangerBrush}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,15"
                               Visibility="{Binding LoginError, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <!-- Sign In with Steam Button -->
                    <Button Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBool}}"
                            HorizontalAlignment="Stretch"
                            Padding="20,14"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#171a21"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="ðŸ”·" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBlock Text="Sign in with Steam" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1b2838"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Loading indicator -->
                    <TextBlock Text="Opening Steam login..." 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,15,0,0"
                               Visibility="{Binding IsLoggingIn, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <!-- Info -->
                    <StackPanel Margin="0,30,0,0">
                        <TextBlock Text="âœ“ Secure browser-based login" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,3"/>
                        <TextBlock Text="âœ“ Steam Guard / 2FA supported" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,3"/>
                        <TextBlock Text="âœ“ Session saved for future use" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,3"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Main App View (after login) -->
        <Grid Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <TextBlock Text="ðŸŽ®" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="SalsaNOW Games" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Navigation -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
                        <Button Content="ðŸ“š Library" Style="{StaticResource TabButton}" Command="{Binding ShowLibraryCommand}"/>
                        <Button Content="ðŸ” Search" Style="{StaticResource TabButton}" Command="{Binding ShowSearchCommand}"/>
                        <Button Content="â¬‡ï¸ Download" Style="{StaticResource TabButton}" Command="{Binding ShowDownloadCommand}"/>
                    </StackPanel>
                    
                    <!-- User Info -->
                    <StackPanel Orientation="Horizontal" Grid.Column="2">
                        <TextBlock Text="{Binding SteamUsername}" 
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>
                        <Button Content="Sign Out" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding LogoutCommand}"
                                Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="20">
                <!-- Library View -->
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource BoolToVisibility}, ConverterParameter=library}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Your Library" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                        <Button Content="â†» Refresh" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding RefreshLibraryCommand}"
                                Margin="20,0,0,0"
                                Padding="15,8"/>
                    </StackPanel>
                    
                    <!-- Game Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding InstalledGames}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource GameCard}" Width="280">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="130"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Game Image -->
                                            <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                                                <Image Source="{Binding HeaderImageUrl}" 
                                                       Stretch="UniformToFill"/>
                                            </Border>
                                            
                                            <!-- Game Info -->
                                            <StackPanel Grid.Row="1" Margin="15">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding SizeOnDiskFormatted}" 
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           Margin="0,4,0,10"/>
                                                
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="ðŸ“‚ Open" 
                                                            Style="{StaticResource SecondaryButton}"
                                                            Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="12,6"
                                                            FontSize="12"/>
                                                    <Button Content="ðŸ—‘ï¸ Delete" 
                                                            Style="{StaticResource DangerButton}"
                                                            Command="{Binding DataContext.DeleteGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="12,6"
                                                            FontSize="12"
                                                            Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding InstalledGames.Count, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}">
                        <TextBlock Text="ðŸ“¦" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="No games installed yet" 
                                   FontSize="18" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,10,0,0"/>
                        <Button Content="Search for Games" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding ShowSearchCommand}"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- Search View -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="search">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Search Games" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,15"/>
                    
                    <!-- Search Box -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Grid.Column="0"/>
                        <Button Content="ðŸ” Search" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SearchGamesCommand}"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBool}}"/>
                    </Grid>
                    
                    <!-- Search Results -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SearchResults}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource GameCard}" Width="280">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="130"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                                                <Image Source="{Binding HeaderImageUrl}" Stretch="UniformToFill"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Row="1" Margin="15">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding AppId, StringFormat='App ID: {0}'}" 
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           Margin="0,4,0,10"/>
                                                
                                                <Button Style="{StaticResource ModernButton}"
                                                        Command="{Binding DataContext.DownloadGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Padding="12,8"
                                                        FontSize="12"
                                                        HorizontalAlignment="Left">
                                                    <Button.Content>
                                                        <TextBlock>
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="â¬‡ï¸ Download"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                                            <Setter Property="Text" Value="âœ“ Installed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Button.Content>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!-- Download View -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="download">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Download by App ID" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,15"/>
                    
                    <!-- App ID Input -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Text="{Binding AppIdInput, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Grid.Column="0"/>
                        <Button Content="â¬‡ï¸ Download" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding DownloadByAppIdCommand}"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBool}}"/>
                    </Grid>
                    
                    <!-- Session Status -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource PrimaryBrush}" 
                            CornerRadius="8" 
                            Padding="15"
                            Margin="0,0,0,20"
                            MaxWidth="600"
                            HorizontalAlignment="Left">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ“ " 
                                           FontSize="14" 
                                           Foreground="{StaticResource SuccessBrush}"/>
                                <TextBlock Text="Logged in as " 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="{Binding SteamUsername}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                            <TextBlock Text="Session active - ready to download games" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="18,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Download Progress & Output -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Current Download Info -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource CardBrush}" 
                                CornerRadius="8" 
                                Padding="15"
                                Margin="0,0,0,15"
                                Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Image Source="{Binding SelectedGame.HeaderImageUrl}" 
                                       Width="120" 
                                       Height="56"
                                       Stretch="UniformToFill"/>
                                
                                <StackPanel Grid.Column="1" Margin="15,0">
                                    <TextBlock Text="{Binding SelectedGame.Name}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding SelectedGame.DownloadStatus}" 
                                               FontSize="13"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,4,0,8"/>
                                    <ProgressBar Value="{Binding SelectedGame.DownloadProgress}" 
                                                 Maximum="100"
                                                 Height="6"
                                                 Background="{StaticResource SecondaryBrush}"
                                                 Foreground="{StaticResource AccentBrush}"/>
                                </StackPanel>
                                
                                <Button Content="Cancel" 
                                        Style="{StaticResource DangerButton}"
                                        Command="{Binding CancelDownloadCommand}"
                                        Grid.Column="2"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <TextBlock Grid.Row="1" 
                                   Text="Download Output" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Output Console -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource SecondaryBrush}" 
                                CornerRadius="8"
                                Padding="15">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="OutputScrollViewer">
                                <TextBlock Text="{Binding DownloadOutput}" 
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource PrimaryBrush}" Padding="20,10">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13"/>
            </Border>
        </Grid>
    </Grid>
</Window>
