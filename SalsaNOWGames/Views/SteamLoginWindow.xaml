<Window x:Class="SalsaNOWGames.Views.SteamLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign in to Steam" 
        Height="650" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#171A21"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1B2838" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ”· Steam Login" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#C7D5E0"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sign in with your Steam account" 
                           FontSize="13" 
                           Foreground="#8F98A0"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Padding="30">
            <StackPanel VerticalAlignment="Center">
                
                <!-- Username -->
                <TextBlock Text="Steam Username or Email" 
                           Foreground="#C7D5E0" 
                           FontSize="13"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameBox"
                         Background="#2A475E"
                         Foreground="#C7D5E0"
                         BorderBrush="#66C0F4"
                         BorderThickness="1"
                         Padding="12,10"
                         FontSize="14"
                         Margin="0,0,0,20"/>
                
                <!-- Password -->
                <TextBlock Text="Password" 
                           Foreground="#C7D5E0" 
                           FontSize="13"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             Background="#2A475E"
                             Foreground="#C7D5E0"
                             BorderBrush="#66C0F4"
                             BorderThickness="1"
                             Padding="12,10"
                             FontSize="14"
                             Margin="0,0,0,15"/>
                
                <!-- Remember Password -->
                <CheckBox x:Name="RememberCheckBox" 
                          IsChecked="True"
                          Foreground="#8F98A0"
                          Margin="0,0,0,25">
                    <TextBlock Text="Remember my credentials" FontSize="13" Foreground="#8F98A0"/>
                </CheckBox>
                
                <!-- Error Message -->
                <TextBlock x:Name="ErrorText" 
                           Foreground="#E74C3C"
                           TextWrapping="Wrap"
                           FontSize="13"
                           Margin="0,0,0,15"
                           Visibility="Collapsed"/>
                
                <!-- Login Button -->
                <Button x:Name="LoginButton"
                        Content="Sign In"
                        Click="LoginButton_Click"
                        Background="#66C0F4"
                        Foreground="#171A21"
                        BorderThickness="0"
                        Padding="15,12"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Margin="0,0,0,15">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#7DD0FF"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Cancel Button -->
                <Button Content="Cancel"
                        Click="CancelButton_Click"
                        Background="Transparent"
                        Foreground="#8F98A0"
                        BorderBrush="#2A475E"
                        BorderThickness="1"
                        Padding="15,10"
                        FontSize="13"
                        Cursor="Hand"/>
                
                <!-- Info -->
                <StackPanel Margin="0,25,0,0">
                    <TextBlock Text="â„¹ï¸ Steam Guard / 2FA:" 
                               Foreground="#C7D5E0"
                               FontSize="12"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="If you have 2FA enabled, you'll be prompted for your code in the download console when downloading." 
                               Foreground="#8F98A0"
                               FontSize="11"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
