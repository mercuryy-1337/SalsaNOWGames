<Window x:Class="SalsaNOWGames.Views.SteamGuardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Guard Code Required" 
        Height="280" 
        Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#171A21"
        ResizeMode="NoResize">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Shield Icon -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ›¡ï¸" 
                   FontSize="48" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"/>

        <!-- Title -->
        <TextBlock Grid.Row="1" 
                   Text="Steam Guard Code Required" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <!-- Message -->
        <TextBlock Grid.Row="2" 
                   x:Name="MessageText"
                   Text="Enter the code from your Steam Mobile App or email" 
                   FontSize="12" 
                   Foreground="#8F98A0" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Code Input -->
        <TextBox Grid.Row="3" 
                 x:Name="CodeInput"
                 FontSize="24"
                 FontFamily="Consolas"
                 TextAlignment="Center"
                 MaxLength="10"
                 Background="#1B2838"
                 Foreground="White"
                 BorderBrush="#66C0F4"
                 BorderThickness="2"
                 Padding="15,10"
                 Margin="30,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            
            <Button x:Name="SubmitButton" 
                    Content="Submit" 
                    Width="120" 
                    Height="40"
                    Margin="0,0,15,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Cursor="Hand"
                    Click="SubmitButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#1A9FFF" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="120" 
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#3D4450" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
